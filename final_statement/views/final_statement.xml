<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_final_statement_tree" model="ir.ui.view">
        <field name="name">final.statement.tree</field>
        <field name="model">final.statement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="purchase_id"/>
                <field name="vendor_id"/>
                <field name="bill_count"/>
                <field name="total_amount"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_final_statement_form" model="ir.ui.view">
        <field name="name">final.statement.form</field>
        <field name="model">final.statement</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="print_final_statement"
                            string="Print Final Report"
                            type="object"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="purchase_id"/>
                        <field name="vendor_id" readonly="1"/>
                        <field name="bill_count" readonly="1"/>
                        <field name="total_amount" readonly="1"/>
                        <field name="currency_id" readonly="1"/>
                    </group>
                    <group string="Bills">
                        <field name="bill_ids" widget="many2many_tags" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
