<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="final_statement_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <div class="page">
                        

                        <div class="container" dir="rtl">
                            <div class="row bg-warning border border-dark">
                                <div class="col text-center">
                                    <h3>تقرير الاستلام النهائي</h3>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-8 text-end border border-dark">
                                    <p>اسم المشروع:</p>
                                </div>
                                <div class="col-4 text-end border border-dark">
                                    <p>قيمة المستخلص الختامي:</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-8 text-end border border-dark">
                                    <p>المورد:</p>
                                </div>
                                <div class="col-4 text-end border border-dark">
                                    <p>تاريخ التقرير:</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-end border border-dark">
                                    <p>تؤكد إدارة المشروع بأن المتعهد قام بإتمام الأعمال المطلوبة منه وفق متطلبات التعاقد وأنه تم استلامها من إدارة المشروع.</p>
                                    <div style="height:100px"></div>
                                </div>
                                
                            </div>
                            <div class="row text-end border border-dark">
                                <div class="col-4">
                                <p>
                                    مدير القطاع
                                </p>
                                </div>
                                <div class="col-4">
                                <p>
                                    المدير المباشر
                                </p>
                                </div>
                                <div class="col-4">
                                <p>
                                    مدير المشروع
                                </p>
                                <div style="height:100px"></div>
                                </div>
                                
                            </div>
                        </div>


                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="final_statement_report_action" model="ir.actions.report">
        <field name="name">Final Statement</field>
        <field name="model">final.statement</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">final_statement.final_statement_report</field>
        <field name="report_file">final_statement.final_statement_report</field>
        <field name="binding_model_id" ref="model_final_statement"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Final Statement - %s' % (object.name or '')</field>
    </record>

</odoo>