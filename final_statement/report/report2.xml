<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="final_statement_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2 class="text-center mb-4">Final Statement</h2>
                        
                        <!-- Header Information -->
                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Statement Reference:</strong> <span t-field="doc.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Vendor:</strong> <span t-field="doc.vendor_id.name"/>
                            </div>
                        </div>
                        
                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Purchase Order:</strong> <span t-field="doc.purchase_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Date:</strong> <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                            </div>
                        </div>
                        
                        <!-- Bills Summary -->
                        <h4>Bill Summary</h4>
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Bill Reference</th>
                                    <th>Date</th>
                                    <th class="text-right">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.bill_ids" t-as="bill">
                                    <tr>
                                        <td><span t-field="bill.name"/></td>
                                        <td><span t-field="bill.date"/></td>
                                        <td class="text-right">
                                            <span t-field="bill.amount_total" 
                                                  t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="2" class="text-right"><strong>Total Amount</strong></td>
                                    <td class="text-right">
                                        <span t-field="doc.total_amount" 
                                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                        
                        <!-- Signatures Section -->
                        <div class="row mt-5">
                            <div class="col-6 text-center">
                                <p>_______________________</p>
                                <p>Authorized Signature</p>
                            </div>
                            <div class="col-6 text-center">
                                <p>_______________________</p>
                                <p>Vendor Signature</p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <record id="final_statement_report_action" model="ir.actions.report">
        <field name="name">Final Statement</field>
        <field name="model">final.statement</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">final_statement.final_statement_report</field>
        <field name="report_file">final_statement.final_statement_report</field>
        <field name="binding_model_id" ref="model_final_statement"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Final Statement - %s' % (object.name or '')</field>
    </record>

</odoo>