<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_vote_option_tree" model="ir.ui.view">
        <field name="name">vote.option.tree</field>
        <field name="model">vote.option</field>
        <field name="arch" type="xml">
            <tree create="true" edit="true" editable="bottom">
                <field name="name"/>
                <field name="code"/>
                <field name="count"/>
                <!-- <field name="current_user" invisible="1"/>
                <field name="incremented_user" invisible="1"/> -->
                <button name="increment_count" type="object" class="btn-primary" icon="fa-plus"
                    invisible="count > 1"
                />
            </tree>
        </field>
    </record>
    
    <record id="action_vote_option" model="ir.actions.act_window">
        <field name="name">Vote Options</field>
        <field name="res_model">vote.option</field>
        <field name="view_mode">tree</field>
    </record>

</odoo>
